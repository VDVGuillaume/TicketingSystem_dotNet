@model TicketingSystem.RazorWebsite.Models.Tickets.TicketsIndexViewModel
@{
    ViewData["Title"] = "Tickets";
}

<div class="text-center">
    <h1 class="display-4">Welcomes</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<h2>Tickets</h2>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Titel</th>
            <th scope="col">Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ticket in Model.Tickets)
        {
        <tr class="pointer-event" onclick="location.href = @($"'Ticket/Details?TicketID='{ticket.Id}")" style="cursor:pointer">
            <th scope="row">@ticket.Id</th>
            <td>@ticket.Title</td>
            <td class="text-warning">@ticket.Status</td>
        </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3">
                <a asp-controller="Ticket" asp-action="CreateTicket">Nieuw ticket</a>
                <nav class="float-right">
                    <ul class="pagination">
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                                <span class="sr-only">Previous</span>
                            </a>
                        </li>
                        <li class="page-item"><a class="page-link pagingCurrent" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                                <span class="sr-only">Next</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </td>
        </tr>
    </tfoot>
</table>
